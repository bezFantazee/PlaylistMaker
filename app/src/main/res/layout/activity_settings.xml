<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme = "@style/Base.Theme.PlaylistMaker"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/colorPrimary"
    android:id="@+id/settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_margin_top"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/back_button"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:theme = "@style/Base.Theme.PlaylistMaker"
            app:tint="?attr/colorOnPrimary"
            app:srcCompat="@drawable/ic_arrow"
            android:layout_marginStart="@dimen/title_margin_start"/>

        <TextView
            style ="@style/HeadText"
            android:layout_marginStart="24dp"
            android:text="@string/settings"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/SettingsButton"
        android:foreground="@null"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        >
        <TextView
            style ="@style/SettingsButtonText"
            android:text="@string/dark_theme"
            android:layout_weight="1"
            />
        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_marginEnd="6dp"
            />

    </LinearLayout>

    <LinearLayout
        style="@style/SettingsButton"
        android:id="@+id/share_button"
        >
        <TextView
            style ="@style/SettingsButtonText"
            android:text="@string/share_app"
            android:layout_weight="1"
            />

        <ImageView
            style = "@style/Icon"
            app:srcCompat = "@drawable/ic_share"
            android:layout_marginEnd="12dp"
            />

    </LinearLayout>

    <LinearLayout
        style="@style/SettingsButton"
        android:id="@+id/write_to_support_button"
        >
        <TextView
            style="@style/SettingsButtonText"
            android:text="@string/write_to_support"
            android:layout_weight="1"
            />

        <ImageView
            style="@style/Icon"
            app:srcCompat = "@drawable/ic_support"
            android:layout_marginEnd="12dp"
            />

    </LinearLayout>

    <LinearLayout
        style="@style/SettingsButton"
        android:id="@+id/user_agreement_button"
        android:gravity="center_vertical"
        >
        <TextView
            style ="@style/SettingsButtonText"
            android:text="@string/user_agreement"
            android:layout_weight="1"
            />

        <ImageView
            style="@style/Icon"
            app:srcCompat = "@drawable/ic_arrow2"
            android:layout_marginEnd="12dp"
            />

    </LinearLayout>
</LinearLayout>

