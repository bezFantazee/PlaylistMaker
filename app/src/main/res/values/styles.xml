<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <!-- Размеры -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>

        <!-- Внешний вид -->
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>

        <!-- Текст -->
        <item name="android:textAppearance">@style/ButtonText</item>

        <!-- Иконка слева от текста -->
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="android:drawablePadding">@dimen/distance_after_icon</item>
    </style>
    <style name="ButtonText" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textFontWeight">500</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/standart_text_size</item>
        <item name="textAllCaps">false</item>

    </style>
    <style name="Icon">
        <item name="android:theme">@style/Base.Theme.PlaylistMaker</item>
        <item name="android:tint">?attr/colorOnBackground</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
    </style>
    <style name="HeadText">
        <item name="android:theme">@style/Base.Theme.PlaylistMaker</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/standart_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="SettingsButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="SettingsButtonText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/Base.Theme.PlaylistMaker</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginStart">@dimen/small_margin</item>
    </style>

    <style name="NavigationPanel">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/search</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/very_small_text</item>
    </style>
</resources>